{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "enabledManagers": [
    "helm-values",
    "kustomize",
    "regex"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "helm-values"
      ],
      "matchFileNames": [
        "**/values.yaml"
      ],
      "groupName": "Helm Chart Versions"
    },
    {
      "matchManagers": [
        "kustomize"
      ],
      "groupName": "Kustomize Remote Bases"
    },
    {
      "matchManagers": [
        "regex"
      ],
      "groupName": "Raw GitHub URL Versions"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^src/.*/kustomization\\.yaml$"],
      "matchStrings": [
        "https://raw\\.githubusercontent\\.com/(?<repo>[^/]+/[^/]+)/refs/tags/v(?<currentValue>[0-9.]+)/(?<filePath>.+\\.yaml)"
      ],
      "depNameTemplate": "{{{ repo }}}",
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "semver"
    }
  ]
}
