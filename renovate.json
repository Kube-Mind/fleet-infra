{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "kustomize": {
    "managerFilePatterns": ["**/kustomization.yaml"]
  },
  "helm-values": {
    "managerFilePatterns": ["**/values.yaml"]
  },
  "enabledManagers": [
    "kustomize",
    "helm-values",
    "regex"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "kustomize",
        "helm-values",
        "regex"
      ],
      "groupName": "chore(deps): update helm charts and oci"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "**/apps.yaml"
      ],
      "matchStrings": [
        "(?s)chartName:\\s(?<chartName>\\S+)\\s+installType:\\shelm\\s+repoURL:\\s(?<repoURL>\\S+)\\s+targetRevision:\\s(?<currentValue>\\S+)"
      ],
      "depNameTemplate": "{{{ chartName }}}",
      "registryUrlTemplate": "{{{ repoURL }}}",
      "datasourceTemplate": "helm"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "**/apps.yaml"
      ],
      "matchStrings": [
        "(?s)chartName:\\s(?<chartName>\\S+)\\s+installType:\\soci\\s+repoURL:\\s(?<repoURL>\\S+)\\s+targetRevision:\\s(?<currentValue>\\S+)"
      ],
      "depNameTemplate": "{{{ repoURL }}}/{{{ chartName }}}",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/kustomization.yaml/"
      ],
      "matchStrings": [
        "https://raw.githubusercontent.com/(?<depName>[^/]*/[^/]*)/(?<currentValue>.*?)/"
      ],
      "datasourceTemplate": "github-tags"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["plans/*.yaml"],
      "matchStrings": [
        "version:\\s*(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+\\+k3s[0-9]+)"
      ],
      "depNameTemplate": "k3s-upgrade",
      "datasourceTemplate": "github-tags",
      "registryUrlTemplate": "https://github.com/k3s-io/k3s-upgrade"
    }
  ]
}
