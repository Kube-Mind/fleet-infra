{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "enabledManagers": [
    "helm-values",
    "kustomize",
    "custom.regex"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "helm-values"
      ],
      "matchFileNames": [
        "**/values.yaml"
      ],
      "groupName": "Helm Chart Versions"
    },
    {
      "matchManagers": [
        "kustomize"
      ],
      "groupName": "Kustomize Remote Bases"
    },
    {
      "matchManagers": [
        "custom.regex"
      ],
      "groupName": "Raw GitHub URL Versions"
    }
  ],
  "customManagers": [
  {
    "customType": "regex",
    "managerFilePatterns": ["(?i)^.*values\\.yaml$"],
    "matchStrings": [
      "installType:\\s+helm[\\s\\S]*?repoURL:\\s+(?<repoURL>\\S+)[\\s\\S]*?chartName:\\s+(?<chartName>\\S+)[\\s\\S]*?targetRevision:\\s+(?<currentValue>\\S+)"
    ],
    "depNameTemplate": "{{{ repoURL }}}/{{{ chartName }}}"
  },
  {
    "customType": "regex",
    "managerFilePatterns": ["(?i)^.*apps\\.yaml$"],
    "matchStrings": [
      "installType:\\s+oci[\\s\\S]*?repoURL:\\s+(?<repoURL>\\S+)[\\s\\S]*?chartName:\\s+(?<chartName>\\S+)[\\s\\S]*?targetRevision:\\s+(?<currentValue>\\S+)"
    ],
    "depNameTemplate": "{{{ repoURL }}}/{{{ chartName }}}"
  }
]

}
