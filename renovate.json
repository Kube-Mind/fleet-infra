{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "dependencyDashboard": true,
  "labels": ["dependencies"],
  "enabledManagers": ["custom.regex"],
  "packageRules": [
    {
      "matchManagers": ["custom.regex"],
      "groupName": "Helm and OCI Chart Versions"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["**/apps.yaml"],
      "matchStrings": [
        "chartName:\\s(?<chartName>\\S+)\\s*\\ninstallType:\\shelm\\s*\\nrepoURL:\\s(?<repoURL>\\S+)\\s*\\ntargetRevision:\\s(?<currentValue>\\S+)"
      ],
      "depNameTemplate": "{{{ chartName }}}",
      "registryUrlTemplate": "{{{ repoURL }}}",
      "datasourceTemplate": "helm"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["**/apps.yaml"],
      "matchStrings": [
        "chartName:\\s(?<chartName>\\S+)\\s*\\ninstallType:\\soci\\s*\\nrepoURL:\\s(?<repoURL>\\S+)\\s*\\ntargetRevision:\\s(?<currentValue>\\S+)"
      ],
      "depNameTemplate": "{{{ repoURL }}}/{{{ chartName }}}",
      "datasourceTemplate": "docker"
    }
  ]
}
