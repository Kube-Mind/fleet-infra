{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "enabledManagers": [
    "helm-values",
    "kustomize",
    "custom.regex"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "helm-values"
      ],
      "matchFileNames": [
        "**/values.yaml"
      ],
      "groupName": "Helm Chart Versions"
    },
    {
      "matchManagers": [
        "kustomize"
      ],
      "groupName": "Kustomize Remote Bases"
    },
    {
      "matchManagers": [
        "custom.regex"
      ],
      "groupName": "Raw GitHub URL Versions"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "^src/.*/values\\.yaml$"
      ],
      "matchStrings": [
        "installType:\\s+(?<installType>oci|helm)[\\s\\S]*?repoURL:\\s+(?<repoURL>\\S+)[\\s\\S]*?chartName:\\s+(?<chartName>\\S+)[\\s\\S]*?targetRevision:\\s+(?<currentValue>[0-9.]+)"
      ],
      "depNameTemplate": "{{{ repoURL }}}/{{{ chartName }}}",
      "datasourceTemplate": "{{#if (eq installType \"helm\")}}helm{{else}}docker{{/if}}",
      "versioningTemplate": "semver",
      "extractVersionTemplate": "{{{ currentValue }}}"
    }
  ]
}
