{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "dependencyDashboard": true,
  "labels": ["dependencies"],
  "enabledManagers": ["custom.regex"],
  "packageRules": [
    {
      "matchManagers": ["custom.regex"],
      "groupName": "Helm and OCI Chart Versions"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["**/apps.yaml"],
      "matchStrings": [
        "(?s)chartName:\\s*(?<chartName>\\S+).*?installType:\\s*helm.*?repoURL:\\s*(?<repoURL>\\S+).*?targetRevision:\\s*(?<currentValue>\\S+)"
      ],
      "depNameTemplate": "{{{ chartName }}}",
      "registryUrlTemplate": "{{{ repoURL }}}",
      "datasourceTemplate": "helm"
    },
    {
      "fileMatch": ["apps.yaml"],
      "matchStrings": [
        "(?<depName>chartName:\\s*(?<chartName>\\S+)[\\s\\S]*?repoURL:\\s*(?<repoURL>\\S+)[\\s\\S]*?targetRevision:\\s*(?<currentValue>\\S+))"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "{{{ repoURL }}}/{{{ chartName }}}"
    }
  ]
}
