{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "dependencyDashboard": true,
  "labels": ["dependencies"],
  "enabledManagers": ["custom.regex"],
  "packageRules": [
    {
      "matchManagers": ["custom.regex"],
      "groupName": "Helm and OCI Chart Versions"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["**/apps.yaml"],
      "matchStrings": [
        "installType:\\s*helm[\\s\\S]*?repoURL:\\s*(?<repoURL>\\S+)[\\s\\S]*?chartName:\\s*(?<chartName>\\S+)[\\s\\S]*?targetRevision:\\s*(?<currentValue>\\S+)"
      ],
      "depNameTemplate": "{{{ chartName }}}",
      "registryUrlTemplate": "{{{ repoURL }}}",
      "datasourceTemplate": "helm"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["**/apps.yaml"],
      "matchStrings": [
        "installType:\\s*oci[\\s\\S]*?repoURL:\\s*(?<repoURL>\\S+)[\\s\\S]*?chartName:\\s*(?<chartName>\\S+)[\\s\\S]*?targetRevision:\\s*(?<currentValue>\\S+)"
      ],
      "depNameTemplate": "{{{ repoURL }}}/{{{ chartName }}}",
      "datasourceTemplate": "docker"
    }
  ]
}
