{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "config:recommended",
    "mergeConfidence:all-badges"
  ],
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "kustomize": {
    "managerFilePatterns": [
      "**/kustomization.yaml"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "**/values.yaml"
    ]
  },
  "enabledManagers": [
    "kustomize",
    "helm-values",
    "custom.regex"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "kustomize",
        "helm-values",
        "custom.regex"
      ],
      "groupName": "chore(deps): update helm charts and oci"
    },
    {
      "matchFileNames": [
        "src/platform/core/system-upgrade-plans/**"
      ],
      "groupName": "chore(deps): system-upgrade-plans"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/kustomization.yaml/"
      ],
      "matchStrings": [
        "https://raw.githubusercontent.com/(?<depName>[^/]*/[^/]*)/(?<currentValue>.*?)/"
      ],
      "datasourceTemplate": "github-tags"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "**/plans/agent.yaml",
        "**/plans/server.yaml"
      ],
      "matchStrings": [
        "version:\\s*(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+\\+k3s[0-9]+)"
      ],
      "depNameTemplate": "k3s-io/k3s-upgrade",
      "datasourceTemplate": "github-tags"
    }
  ]
}
