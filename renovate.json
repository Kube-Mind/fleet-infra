{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "enabledManagers": [
    "helm-values",
    "kustomize"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "helm-values"
      ],
      "matchFileNames": [
        "**/values.yaml"
      ],
      "groupName": "Helm Chart Versions"
    },
    {
      "matchManagers": [
        "kustomize"
      ],
      "groupName": "Kustomize Remote Bases"
    }
  ]
}
